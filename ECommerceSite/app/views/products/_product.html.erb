<div id = "main"> 

        <div id = "edit_function">
            <p>
                <%= link_to 'Edit', edit_product_path(product) %>
                <%= link_to 'Delete', product, :method => :delete, :confirm => 'Are you sure you want to delete this post?' %>
            </p>
       </div>
        
        <div class = "name">
            <h1><%=product.name %></h1>
        </div>
      
            
    <div id = "body">
        <div>
            <b>Rental ID:</b>
            <%= product.name%>
        </div>
        
        <div>
            <b>Occupation:</b>
            <%= product.description %>
        </div>
        
        <div>
            <b>Price:</b>
            $<%= product.price %>/week
        </div>
        
        <div>
            <b>Available:</b>
            <%= product.rentalid %>
        </div>
        
        <div>
            <b>Description:</b>
            <%= product.quantity %>
        </div>
    </div>
</div>